[alias]
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %C(white)%s%Creset %Cgreen(%cr) %C(bold cyan)<%an>%Creset' --abbrev-commit --
  st = status
  co = checkout
  pushf = push --force-with-lease

[core]
  editor = vim
  excludesfile = /Users/paulfedory/.gitignore_global

[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix

[color]
  # Use colors in Git commands that are capable of colored output when outputting to the terminal
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 52
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true
